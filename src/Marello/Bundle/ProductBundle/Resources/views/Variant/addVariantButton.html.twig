{% import 'OroUIBundle::macros.html.twig' as UI %}

{% set route = entity.variantCode ?
    path('marello_product_add_variant', { id: entity.id, variantCode: entity.variantCode })
        : path('marello_product_create_variant' , { id: entity.id })
%}
{% set title = entity.variantCode ?
    'marello.product.add_variant.label'|trans : 'marello.product.create_variant.label'|trans
%}
{{ dump(title) }}
{{ UI.button({
    'path': route,
    'title': title,
    'label': title,
    'iCss': 'icon-barcode',
    'aCss': 'action-link',
}) }}
